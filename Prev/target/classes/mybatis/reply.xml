<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="reply">
	<insert id="add">
		INSERT INTO reply VALUES (REPLY_SEQ.nextval, #{content}, #{pid}, #{id}, default)
	</insert>
	
	<select id="list" resultType="Reply">
		SELECT * FROM reply where pid=#{pid}
	</select>
	
	<delete id="delete">
		DELETE FROM reply where rid=#{rid}
	</delete>
	
	<update id="update">
		UPDATE reply SET content=#{content}, regdate=#{regdate} WHERE rid=#{rid} and id=#{id}
		
		<selectKey resultType="date" order="AFTER" keyProperty="regdate">
			SELECT regdate from reply where rid=#{rid}
		</selectKey>
	</update>
</mapper>